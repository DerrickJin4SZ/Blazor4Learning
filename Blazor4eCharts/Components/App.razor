@inject IHostEnvironment Env

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Blazor4Learning.styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <!-- Video.js CSS -->
    <link href="lib/video.js/video-js.min.css" rel="stylesheet" />
    <!-- Viewer.js CSS -->
    <link href="lib/viewerjs/viewer.css" rel="stylesheet">
    <!-- Bootstrap Blazor CSS -->
    <link href="_content/BootstrapBlazor/css/bootstrap.blazor.bundle.min.css" rel="stylesheet">
    <HeadOutlet />
</head>
<body>
    <Routes @rendermode="@InteractiveServer" />
    <div id="blazor-error-ui">
        @if (Env.IsDevelopment())
        {
            <text>
                An unhandled exception has occurred. See browser dev tools for details.
            </text>
        }
        else
        {
            <text>
                An error has occurred. This app may no longer respond until reloaded.
            </text>
        }
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.web.js"></script>
    <script src="/echarts/echarts.min.js"></script>
    <script src="lib/html2canvas/html2canvas.min.js"></script>
    <script src="lib/jsQR.js"></script>
    <script src="lib/video.js/video.min.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="_content/BootstrapBlazor/js/bootstrap.blazor.bundle.min.js"></script>
    <script src="_content/BootstrapBlazor.SummerNote/js/jquery-3.5.1.min.js"></script>
</body>
</html>
